@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@using HayvanBarinagi.Models
@model List<Hayvan>

@{
    ViewData["Title"] = "Anasayfa";
}



<header class="bg-warning text-center py-4">
    <h1>@localizer["title"]</h1>
    <p>@localizer["p"]</p>
</header>

<div class="container mt-4">
    <h2 class="text-center">@localizer["welcome"]</h2>
    <p class="text-center">@localizer["py"] @Model.Count @localizer["pys"]</p>

    <div class="row">
        <!-- Hayvan Kartları -->
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">@localizer["animal"] @item.Id</h3>
                        <p class="card-text">@localizer["type"]: @item.Adi</p>
                        <p class="card-text">@localizer["age"]: @item.Yas</p>
                        <p class="card-text">@localizer["genius"]: @item.Cins</p>
                        <a class="btn btn-primary" asp-area="" asp-controller="Home" asp-action="Hayvanlar">@localizer["more"]</a>
                    </div>
                </div>
            </div>
        }
        <!-- Daha fazla hayvan kartları buraya eklenebilir. -->
    </div>
</div>