@{
    ViewData["Title"] = "Hayvan Ekleme Sayfası";
}

<h2 class="text-center mb-4">Barınağımıza Yeni Hayvan Ekleyin</h2>

@using (Html.BeginForm("HayvanEkle", "Admin", FormMethod.Post))
{
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form>
                <div class="mb-3">
                    <label for="ad" class="form-label">Hayvan Adı</label>
                    <input type="text" class="form-control" id="ad" name="Adi" required>
                </div>
                <div class="mb-3">
                    <label for="cins" class="form-label">Hayvan Cinsi</label>
                    <input type="text" class="form-control" id="cins" name="Cins" required>
                </div>
                <div class="mb-3">
                    <label for="yas" class="form-label">Hayvan Yaşı</label>
                    <input type="number" class="form-control" id="yas" name="Yas" required>
                </div>
                <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-primary btn-md">Ekle</button>
                </div>
            </form>
        </div>
    </div>
}
