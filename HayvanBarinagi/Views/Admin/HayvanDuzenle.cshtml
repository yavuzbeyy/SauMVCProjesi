@model Hayvan 

<h2 class="text-center mb-4">Hayvan Düzenle</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="HayvanDuzenle" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mb-3">
                <label for="ad" class="form-label">Hayvan Adı</label>
                <input type="text" class="form-control" id="ad" name="Adi" value="@Model.Adi" required>
            </div>
            <div class="mb-3">
                <label for="cins" class="form-label">Hayvan Cinsi</label>
                <input type="text" class="form-control" id="cins" name="Cins" value="@Model.Cins" required>
            </div>
            <div class="mb-3">
                <label for="yas" class="form-label">Hayvan Yaşı</label>
                <input type="number" class="form-control" id="yas" name="Yas" value="@Model.Yas" required>
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary btn-md">Güncelle</button>
            </div>
        </form>
    </div>
</div>

